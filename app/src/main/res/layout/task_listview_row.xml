<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_task_listview_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_task_listview_row_creation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_task_listview_row_name"
        />
    <TextView
        android:id="@+id/tv_task_listview_row_completition_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_task_listview_row_creation_date"
        />
    <ToggleButton
        android:id="@+id/tb_task_listview_row_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_task_listview_row_completition_date"
        android:layout_below="@id/tv_task_listview_row_name"
        />

</RelativeLayout>